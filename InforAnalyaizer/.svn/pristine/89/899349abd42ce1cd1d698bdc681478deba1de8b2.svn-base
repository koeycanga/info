<!--条件筛选-->
		<div class="cy_CIASFE_condition">
		  <div class="cy_CIASFE_search">
				<select><option>全文匹配</option></select>
				<div class="cy_CMICBMS_schbox01"><input type="text" v-model="search_key" placeholder="请输入…" style="cursor: text"></div>
