<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ichangyun.InforAnalyaizer.mapper.UserMapper">
    <select id="getUser" parameterType="java.util.Map" resultType="com.ichangyun.InforAnalyaizer.model.User">
        SELECT *
        FROM user
        where id =#{param.id}
    </select>
    <insert id="insertUser" parameterType="java.util.Map">
        INSERT INTO user (id,name,age,sex) values(#{param.id},#{param.name},#{param.age},#{param.sex})
    </insert>
    <select id="selectAll" resultType="com.ichangyun.InforAnalyaizer.model.User">
        SELECT * FROM USER
    </select>
    <update id="update" parameterType="java.util.Map">
        UPDATE USER  SET id=id-#{param.total},age=age+#{param.total}
        WHERE name=#{param.name}
    </update>
    
    <select id="isUserExist" parameterType="java.util.Map" resultType="com.ichangyun.InforAnalyaizer.model.User">
       SELECT
				m1.User_ID,
				m1. PASSWORD,
				m1. NAME,
				m1.Department,
				m1.Telephone,
				m1.EMail,
				m1.UserRole_ID,
				m1.UpdateDateTime,
				m2.UserRoleName,
				m2.Authority
			FROM
				m_userinfo m1
				LEFT JOIN m_userrole m2 on m1.UserRole_ID = m2.UserRole_ID
			WHERE
				m1.User_ID =#{param.username}
			AND m1.PASSWORD =#{param.passwd}
    
    
    </select>
    
    <select id="getName" parameterType="java.util.Map" resultType="java.lang.String">
         select Name from m_userinfo where User_ID=#{param.username}
    </select>
    
</mapper>
